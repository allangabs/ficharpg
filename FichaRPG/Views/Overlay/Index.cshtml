@model FichaRPG.Models.Personagem

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RPG Overlay - @Model.Nome</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: transparent;
            color: #fff;
            padding: 20px;
        }

        .overlay-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
            max-width: 400px;
        }

        .personagem-overlay {
            background: linear-gradient(135deg, rgba(30, 30, 45, 0.95), rgba(20, 20, 35, 0.95));
            border: 2px solid rgba(100, 100, 150, 0.6);
            border-radius: 12px;
            padding: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(10px);
        }

        .personagem-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            border-bottom: 2px solid rgba(100, 100, 150, 0.3);
            padding-bottom: 8px;
            position: relative;
        }

        /* Anima√ß√£o de dado inline no header */
        .dado-inline-animation {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            z-index: 100;
            background: rgba(0, 0, 0, 0.95);
            padding: 20px 30px;
            border-radius: 15px;
            border: 3px solid #00ff88;
            box-shadow: 0 0 30px rgba(0, 255, 136, 0.6);
        }

        .dado-inline-animation.show {
            display: flex;
            animation: popIn 0.3s ease-out;
        }

        .dado-inline-animation .tipo-dado {
            font-size: 18px;
            font-weight: bold;
            color: #00ff88;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .dado-inline-animation .dado-icon {
            font-size: 50px;
            animation: spin 0.8s ease-in-out;
        }

        .dado-inline-animation .resultado {
            font-size: 60px;
            font-weight: bold;
            color: #00ff88;
            text-shadow: 0 0 20px rgba(0, 255, 136, 0.8);
            animation: numberPop 0.5s ease-out;
        }

        @@keyframes popIn {
            from {
                opacity: 0;
                transform: scale(0.3);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @@keyframes numberPop {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            50% {
                transform: scale(1.3);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .personagem-imagem {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid rgba(100, 100, 150, 0.6);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            position: relative;
        }

        /* Container da imagem para posicionar a anima√ß√£o */
        .imagem-container {
            position: relative;
            width: 60px;
            height: 60px;
        }

        /* Anima√ß√£o de dado sobre a imagem */
        .dado-sobre-imagem {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.9);
            border-radius: 8px;
            z-index: 200;
            border: 2px solid #00ff88;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.8);
        }

        .dado-sobre-imagem.show {
            display: flex;
            animation: popIn 0.3s ease-out;
        }

        .dado-sobre-imagem .dado-icon {
            font-size: 35px;
            animation: spin 0.8s ease-in-out infinite;
        }

        .dado-sobre-imagem .resultado {
            font-size: 35px;
            font-weight: bold;
            color: #00ff88;
            text-shadow: 0 0 10px rgba(0, 255, 136, 0.8);
            animation: numberPop 0.5s ease-out;
        }

        .personagem-nome {
            font-size: 24px;
            font-weight: bold;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .personagem-classe {
            font-size: 14px;
            color: #a8a8ff;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-overlay {
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stat-value {
            font-size: 16px;
            font-weight: bold;
        }

        .stat-bar-overlay {
            height: 25px;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .stat-fill-overlay {
            height: 100%;
            transition: width 0.5s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-fill-overlay::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                90deg,
                transparent,
                rgba(255, 255, 255, 0.3),
                transparent
            );
            animation: shimmer 2s infinite;
        }

        @@keyframes shimmer {
            to {
                left: 100%;
            }
        }

        .vida-bar {
            background: linear-gradient(90deg, #ff4444, #ff6b6b);
            box-shadow: 0 0 10px rgba(255, 68, 68, 0.6);
        }

        .sanidade-bar {
            background: linear-gradient(90deg, #6b4dff, #9b7dff);
            box-shadow: 0 0 10px rgba(107, 77, 255, 0.6);
        }

        .stat-text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 13px;
            font-weight: bold;
            color: #fff;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.9);
            z-index: 1;
        }

        .critical-health {
            animation: pulse 1s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
                box-shadow: 0 0 20px rgba(255, 0, 0, 0.8);
            }
            50% {
                opacity: 0.7;
                box-shadow: 0 0 30px rgba(255, 0, 0, 1);
            }
        }

        /* Anima√ß√£o de Dados no Overlay */
        .dado-overlay-animation {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            background: rgba(0, 0, 0, 0.95);
            border-radius: 20px;
            padding: 60px;
            box-shadow: 0 0 50px rgba(255, 255, 255, 0.5);
            animation: fadeInScale 0.5s ease-out;
            display: none;
            text-align: center;
            border: 3px solid rgba(255, 255, 255, 0.3);
        }

        .dado-overlay-animation.show {
            display: block;
        }

        .dado-overlay-animation .dado-icon {
            font-size: 80px;
            animation: rotate3d 1s ease-in-out;
            display: block;
            margin-bottom: 20px;
            filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.5));
        }

        .dado-overlay-animation .resultado-valor {
            font-size: 140px;
            font-weight: bold;
            color: #00ff88;
            text-shadow: 0 0 30px rgba(0, 255, 136, 0.8);
            animation: pulseGlow 0.5s ease-in-out;
            line-height: 1;
            margin: 20px 0;
        }

        .dado-overlay-animation .resultado-info {
            font-size: 20px;
            color: #fff;
            margin-top: 20px;
            opacity: 0.9;
        }

        .dado-overlay-animation .todos-resultados {
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .dado-overlay-animation .resultado-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 24px;
            font-weight: bold;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .dado-overlay-animation .resultado-item.maximo {
            background: rgba(0, 255, 136, 0.2);
            border-color: #00ff88;
            color: #00ff88;
        }

        @@keyframes fadeInScale {
            from {
                opacity: 0;
                transform: translate(-50%, -50%) scale(0.5);
            }
            to {
                opacity: 1;
                transform: translate(-50%, -50%) scale(1);
            }
        }

        @@keyframes rotate3d {
            0% { transform: rotateX(0deg) rotateY(0deg); }
            100% { transform: rotateX(360deg) rotateY(360deg); }
        }

        @@keyframes pulseGlow {
            0%, 100% {
                transform: scale(1);
                text-shadow: 0 0 30px rgba(0, 255, 136, 0.8);
            }
            50% {
                transform: scale(1.1);
                text-shadow: 0 0 50px rgba(0, 255, 136, 1);
            }
        }

        .fade-out {
            animation: fadeOut 1s ease-out forwards;
        }

        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@latest/dist/browser/signalr.min.js"></script>
    <script>
        const personagemId = '@Model.Id';

        // Conectar ao SignalR para dados
        const dadoConnection = new signalR.HubConnectionBuilder()
            .withUrl("/dadoHub")
            .build();

        dadoConnection.on("ReceberRolagem", function (rolagem) {
            // APENAS mostrar se a rolagem √© ESPECIFICAMENTE para este personagem
            if (rolagem.personagemId && rolagem.personagemId === personagemId) {
                mostrarAnimacaoSobreImagem(rolagem);
            }
        });

        dadoConnection.start().catch(function (err) {
            console.error('Erro ao conectar DadoHub:', err.toString());
        });

        // Conectar ao SignalR para atualiza√ß√µes de personagem
        const personagemConnection = new signalR.HubConnectionBuilder()
            .withUrl("/personagemHub")
            .build();

        personagemConnection.on("PersonagemAtualizado", function (personagem) {
            // Atualizar apenas se for este personagem
            if (personagem.id === personagemId) {
                atualizarPersonagem(personagem);
            }
        });

        personagemConnection.start().catch(function (err) {
            console.error('Erro ao conectar PersonagemHub:', err.toString());
        });

        function atualizarPersonagem(personagem) {
            // Atualizar Vida
            document.querySelector('.stat-value').textContent = `${personagem.vidaAtual} / ${personagem.vidaMaxima}`;
            const vidaFill = document.querySelector('.vida-bar');
            const vidaBar = vidaFill.closest('.stat-bar-overlay');
            vidaFill.style.width = `${personagem.porcentagemVida}%`;
            vidaBar.querySelector('.stat-text-overlay').textContent = `${personagem.porcentagemVida}%`;
            
            // Adicionar/remover classe de vida cr√≠tica
            if (personagem.porcentagemVida <= 25) {
                vidaBar.classList.add('critical-health');
            } else {
                vidaBar.classList.remove('critical-health');
            }

            // Atualizar Sanidade
            const sanidadeValues = document.querySelectorAll('.stat-value');
            sanidadeValues[1].textContent = `${personagem.sanidadeAtual} / ${personagem.sanidadeMaxima}`;
            const sanidadeFill = document.querySelector('.sanidade-bar');
            sanidadeFill.style.width = `${personagem.porcentagemSanidade}%`;
            sanidadeFill.closest('.stat-bar-overlay').querySelector('.stat-text-overlay').textContent = `${personagem.porcentagemSanidade}%`;
        }

        function mostrarAnimacaoSobreImagem(rolagem) {
            // Encontrar o container da imagem
            const imagemContainer = document.querySelector('.imagem-container');
            if (!imagemContainer) return;

            // Criar elemento de anima√ß√£o sobre a imagem se n√£o existir
            let animacao = imagemContainer.querySelector('.dado-sobre-imagem');
            if (!animacao) {
                animacao = document.createElement('div');
                animacao.className = 'dado-sobre-imagem';
                imagemContainer.appendChild(animacao);
            }

            // Fase 1: Mostrar dado girando
            animacao.innerHTML = `<div class="dado-icon">üé≤</div>`;
            animacao.classList.add('show');

            // Fase 2: Ap√≥s 1.2s, mostrar resultado
            setTimeout(() => {
                animacao.innerHTML = `<div class="resultado">${rolagem.maiorValor}</div>`;
            }, 1200);

            // Fase 3: Esconder ap√≥s 3.5s
            setTimeout(() => {
                animacao.classList.add('fade-out');
                setTimeout(() => {
                    animacao.classList.remove('show', 'fade-out');
                }, 500);
            }, 3500);
        }

        function mostrarAnimacaoInline(rolagem) {
            // Criar elemento inline no header se n√£o existir
            let animacao = document.querySelector('.dado-inline-animation');
            if (!animacao) {
                animacao = document.createElement('div');
                animacao.className = 'dado-inline-animation';
                document.querySelector('.personagem-header').appendChild(animacao);
            }

            // Obter tipo de dado
            const tipoDadoTexto = `D${rolagem.tipoDado}`;

            // Fase 1: Mostrar dado girando
            animacao.innerHTML = `
                <div class="tipo-dado">${tipoDadoTexto}</div>
                <div class="dado-icon">üé≤</div>
            `;
            animacao.classList.add('show');

            // Fase 2: Ap√≥s 1s, mostrar resultado
            setTimeout(() => {
                animacao.innerHTML = `
                    <div class="tipo-dado">${tipoDadoTexto}</div>
                    <div class="resultado">${rolagem.maiorValor}</div>
                `;
            }, 1000);

            // Fase 3: Esconder ap√≥s 3s
            setTimeout(() => {
                animacao.classList.add('fade-out');
                setTimeout(() => {
                    animacao.classList.remove('show', 'fade-out');
                }, 500);
            }, 3000);
        }

        function mostrarAnimacaoDado(rolagem) {
            // Criar elemento de anima√ß√£o se n√£o existir
            let animacao = document.getElementById('dadoAnimacaoOverlay');
            if (!animacao) {
                animacao = document.createElement('div');
                animacao.id = 'dadoAnimacaoOverlay';
                animacao.className = 'dado-overlay-animation';
                document.body.appendChild(animacao);
            }

            // Montar conte√∫do
            let todosResultadosHtml = '';
            rolagem.resultados.forEach(valor => {
                const isMaximo = valor === rolagem.maiorValor;
                todosResultadosHtml += `<span class="resultado-item ${isMaximo ? 'maximo' : ''}">${valor}</span>`;
            });

            animacao.innerHTML = `
                <div class="dado-icon">üé≤</div>
                <div class="resultado-valor">${rolagem.maiorValor}</div>
                <div class="resultado-info">Maior valor rolado</div>
                <div class="todos-resultados">${todosResultadosHtml}</div>
            `;

            // Mostrar anima√ß√£o
            animacao.classList.add('show');

            // Esconder ap√≥s 4 segundos
            setTimeout(() => {
                animacao.classList.add('fade-out');
                setTimeout(() => {
                    animacao.classList.remove('show', 'fade-out');
                }, 1000);
            }, 4000);
        }
    </script>
</head>
<body>
    <div class="overlay-container">
        <div class="personagem-overlay">
            <div class="personagem-header">
                <div>
                    <div class="personagem-nome">@Model.Nome</div>
                    <div class="personagem-classe">@Model.Classe</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.ImagemUrl))
                {
                    <div class="imagem-container">
                        <img src="@Model.ImagemUrl" alt="@Model.Nome" class="personagem-imagem" />
                    </div>
                }
            </div>

            <!-- Vida -->
            <div class="stat-overlay">
                <div class="stat-label">
                    <span>‚ù§Ô∏è Vida</span>
                    <span class="stat-value">@Model.VidaAtual / @Model.VidaMaxima</span>
                </div>
                <div class="stat-bar-overlay @(Model.PorcentagemVida <= 25 ? "critical-health" : "")">
                    <div class="stat-fill-overlay vida-bar" style="width: @Model.PorcentagemVida%">
                    </div>
                    <div class="stat-text-overlay">@Model.PorcentagemVida%</div>
                </div>
            </div>

            <!-- Sanidade -->
            <div class="stat-overlay">
                <div class="stat-label">
                    <span>üß† Sanidade</span>
                    <span class="stat-value">@Model.SanidadeAtual / @Model.SanidadeMaxima</span>
                </div>
                <div class="stat-bar-overlay">
                    <div class="stat-fill-overlay sanidade-bar" style="width: @Model.PorcentagemSanidade%">
                    </div>
                    <div class="stat-text-overlay">@Model.PorcentagemSanidade%</div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
